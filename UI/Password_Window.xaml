<Window x:Class="UI.Password_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password_Window" Height="220.628" Width="460.09">
    <Grid>
        <PasswordBox x:Name="Psw_box" HorizontalAlignment="Left" Margin="26,66,0,0" VerticalAlignment="Top" Height="39" RenderTransformOrigin="0.5,0.5" Width="212">
            <PasswordBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.011"/>
                    <RotateTransform Angle="-0.044"/>
                    <TranslateTransform/>
                </TransformGroup>
            </PasswordBox.RenderTransform>
        </PasswordBox>
        <Label x:Name="Psw_label" Content="For entering type a password code" HorizontalAlignment="Left" Margin="42,10,0,0" VerticalAlignment="Top" Height="41" Width="335"/>
        <Button Content="Enter" HorizontalAlignment="Left" Margin="285,68,0,0" VerticalAlignment="Top" Width="130" Click="Button_Click" Height="31"/>
        <Label x:Name="Label_Error" Content="Error" HorizontalAlignment="Left" Height="39" Margin="36,129,0,0" VerticalAlignment="Top" Width="67"/>
    </Grid>
</Window>
